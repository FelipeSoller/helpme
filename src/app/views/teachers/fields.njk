<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url" 
            name="avatar_url" 
            placeholder="http://"
            value="{{ teacher.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Complete Name</div>
    <div>
        <input 
            type="text" 
            name="name" 
            placeholder="Write your complete name"
            value="{{ teacher.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Birthday</div>
    <div>
        <input 
            type="date" 
            name="birth_date"
            value="{{ teacher.birth_date }}"
        >
    </div>
</div>

<div class="item">
    <div>Education</div>
    <div>
        <select name="education_level">
            <option 
                value="Secondary" 
                {% if teacher.education_level == "Secondary school" %} 
                selected="selected" 
                {% endif %}
                >Secondary school
            </option>
            <option 
                value="Bachelor" 
                {% if teacher.education_level == "Bachelor’s degree" %} 
                selected="selected" 
                {% endif %}
                >Bachelor’s degree
            </option>
            <option 
                value="Master" 
                {% if teacher.education_level == "Master’s degree" %} 
                selected="selected" 
                {% endif %}
                >Master’s degree
            </option>
            <option 
                value="Doctoral" 
                {% if teacher.education_level == "Doctoral degree" %} 
                selected="selected" 
                {% endif %}
                >Doctoral degree
            </option>
        </select>
    </div>
</div>

<div class="item">
    <div>Type of Class</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="class_type" 
                value="In-person"
                {% if teacher.class_type == "In-person" %}
                    checked
                {% endif %}
            >In-Person
        </span>
        <span>
            <input 
                type="radio" 
                name="class_type" 
                value="Online"
                {% if teacher.class_type == "Online" %}
                    checked
                {% endif %}
            >Online
        </span>
    </div>
</div>

<div class="item">
    <div>Subjects</div>
    <div>
        <input 
            type="text" 
            name="subjects_taught" 
            placeholder="Write the subjects you teach separated by commas"
            value="{{ teacher.subjects_taught }}"
        >
    </div>
</div>

<button type="submit">Save</button>