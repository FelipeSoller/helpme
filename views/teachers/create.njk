{% extends "layout.njk" %}

{% block content %}
    <form class="card" method="post" action="/teachers">
        <section 
            class="avatar" 
            style="background: url(https://source.unsplash.com/collection/3785838/500x500) no-repeat center center / cover">
        </section>
        <section class="details">
        
            <h3>Teacher's information</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input 
                        type="url" 
                        name="avatar_url"
                        placeholder="http://"
                    >
                </div>
            </div>

            <div class="item">
                <div>Complete Name</div>
                <div>
                    <input 
                    type="text" 
                    name="name"
                    placeholder="Write your complete name"
                >
                </div>
            </div>

            <div class="item">
                <div>Birthdate</div>
                <div>
                    <input 
                        type="date" 
                        name="birth"
                    >
                </div>
            </div>

            <div class="item">
                <div>Degree Title</div>
                <div>
                    <input 
                        type="text" 
                        name="degrees"
                        placeholder="Write your Degree Title"
                    >
                </div>
            </div>

            <div class="item">
                <div>Type of Class</div>
                <div>
                    <span>
                        <input 
                            type="radio" 
                            name="classes" 
                            value="person"
                        >In-Person
                    </span>
                    <span>
                        <input 
                            type="radio" 
                            name="classes" 
                            value="online"
                        >Online
                    </span>
                </div>
            </div>

            <div class="item">
                <div>Subjects</div>
                <div>
                    <input 
                        type="text" 
                        name="subjects"
                        placeholder="Write your Degree Title"
                    >
                </div>
            </div>

            <button type="submit">Save</button>

        </section>
    </form>
{% endblock content %}